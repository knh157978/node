    <title>Hello, world!</title>
  
</head>

<body>
  <div>채팅방</div>
  <input type="text" id='input1'>
  <button id='send'>메세지 보내기</button>
  <script>
      var socket = io();
      $('#send').click(function(){
          socket.emit('user-send',$("#input1").val())//이름,메세지
      })
      socket.on('broadcast',function(data){
          console.log(data)
      })
  </script>
</body>

</html>